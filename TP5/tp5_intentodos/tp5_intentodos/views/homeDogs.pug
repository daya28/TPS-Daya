extends layout

block content
    h1=title
    .rutas
        a(href="Home")
            p Home
        a(href="Razas")
            p Razas
        a(href="Todas")
            p Todas
    .seleccionar
        form#cargardatos(action="/filtrados" method="post")
            h1 Introduce los datos para buscar el perrito ideal para ti!
            select#raza(name="raza")
                option(val="seleccionar") seleccionar
                option(val="airedale") airedale
                option(val="akita") akita
                option(val="bulldog") bulldog
                option(val="chihuahua") chihuahua
                option(val="chowchow") chow chow
                option(val="doberman") doberman
                option(val="escoces") escoces
                option(val="jackrussel") jackrussel
                option(val="pitbull") pitbull
                option(val="pomeranian") pomeranian
                option(val="whiteterrier") white terrier
                option(val="yorkshire") yorkshire terrier
            select#tamano(name="tamano")
                option(val="seleccionar") seleccionar
                option(val="pequeno") pequeno
                option(val="mediano") mediano
                option(val="grande") grande
            select#edad(name="edad")
                option(val="seleccionar") seleccionar
                option(val="cachorro") cachorro
                option(val="adulto") adulto
            input#btn-filter(type="submit" value="enviar")
    .perros
        for i in doggies
            .perro
                figure.fotoPerro
                    img(src='./'+i.imagen)
                .infoPerro
                    p=i.raza
                    p=i.tamano
                    p=i.edad
    .paginas
        a(href='/perritos/1').link Back to main page